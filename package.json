{
	"name": "discord-logger",
	"version": "1.0.0",
	"description": "A superset of events on top of DiscordJS ones, enabling to log events occuring in your guild",
	"main": "lib/index.js",
	"scripts": {
		"test": "jest --coverage",
		"build": "tsc",
		"build:docs": "typedoc --out docs src/index.ts",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" --tab-width 4",
		"lint": "tslint -p tsconfig.json",
		"prepare": "yarn build",
		"example": "yarn build & node ./example/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HunteRoi/discord-logger.git"
	},
	"keywords": [
		"discordjs",
		"discordbot",
		"logger",
		"events"
	],
	"author": "HunteRoi <me@tinaeldevresse.eu> (https://tinaeldevresse.eu)",
	"funding": "https://github.com/sponsors/hunteroi",
	"engines": {
		"node": ">=16.6.0"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/HunteRoi/discord-logger/issues"
	},
	"homepage": "https://github.com/HunteRoi/discord-logger#readme",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib/**/*"
	],
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/jest-sinon": "^1.0.2",
		"@types/node": "^17.0.8",
		"discord-sync-commands": "^0.3.0",
		"efate": "^0.5.1",
		"faker": "^5.5.3",
		"jest": "^27.4.7",
		"jest-cli": "^27.4.7",
		"jest-sinon": "^1.0.4",
		"moq.ts": "^7.3.4",
		"ts-jest": "^27.1.2",
		"ts-sinon": "^2.0.2",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typedoc": "^0.22.10",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"discord-logs": "^2.0.1",
		"discord.js": "^13.5.0"
	}
}
