{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"resolveJsonModule": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"paths": {
			"@handlers/*": ["handlers/*"],
			"@types/*": ["types/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["lib/*", "coverage/*"]
}
